{
  "extends": [
    "plugin:tailwindcss/recommended",
    "plugin:import/recommended",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:import/typescript"
  ],
  "rules": {
    "react/no-unescaped-entities": "off",
    "no-unused-vars": 1,
    "tailwindcss/no-custom-classname": 1
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js"
      ],
      "parser": "@typescript-eslint/parser"
    }
  ]
}